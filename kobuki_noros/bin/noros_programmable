import imp
import sys
from kobuki_noros.programmable import RobotController

if len(sys.argv) < 2:
    print "[ERROR] You need to specify the path to the imported module."
    sys.exit()

module = imp.load_source("kobuki_noros.solution", sys.argv[1])

rc = RobotController({
    "init":         module.quando_inicia,
    "bump_center":  module.quando_bate_na_frente,
    "bump_left":    module.quando_bate_na_esquerda,
    "bump_right":   module.quando_bate_na_direita,
    "walk_done":    module.andar_feito,
    "rotate_done":  module.rodar_feito
})
rc.run()
